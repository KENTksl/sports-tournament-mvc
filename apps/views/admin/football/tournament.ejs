<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partical/headercomponent'); %>
</head>

<body>
    <div class="container-fluid position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->

        <!-- Sidebar Start -->
        <%- include('../partical/menucomponent'); %>
        <!-- Sidebar End -->

        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <%- include('../partical/navbarcomponent'); %>
            <!-- Navbar End -->

            <!-- Table Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light rounded h-100 p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h6 class="mb-0">Quản lý Giải Đấu (Bóng Đá)</h6>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">Thêm Giải Đấu</button>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Tên Giải</th>
                                    <th scope="col">Ban Tổ Chức</th>
                                    <th scope="col">Chế Độ</th>
                                    <th scope="col">Số Đội</th>
                                    <th scope="col">Trạng Thái</th>
                                    <th scope="col">Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (tournaments && tournaments.length > 0) { %>
                                    <% tournaments.forEach((t, index) => { %>
                                        <tr>
                                            <th scope="row"><%= index + 1 %></th>
                                            <td><a href="/admin/football/tournament/detail/<%= t._id %>"><%= t.name %></a></td>
                                            <td><%= t.organizer %></td>
                                            <td><%= t.mode %></td>
                                            <td><%= t.teams ? t.teams.length : 0 %> / <%= t.teamsCount %></td>
                                            <td><%= t.status %></td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/admin/football/tournament/detail/<%= t._id %>" class="btn btn-sm btn-info">Chi Tiết</a>
                                                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editModal<%= t._id %>">Sửa</button>
                                                    <form action="/admin/football/tournament/delete" method="POST" style="display:inline;">
                                                        <input type="hidden" name="id" value="<%= t._id %>">
                                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</button>
                                                    </form>
                                                    <% if (t.status === 'upcoming' && (t.teams ? t.teams.length : 0) >= t.teamsCount) { %>
                                                        <form action="/admin/football/tournament/start" method="POST" style="display: inline-block; margin-left: 5px;" onsubmit="return confirm('Bạn có chắc chắn muốn bắt đầu giải đấu này không?');">
                                                            <input type="hidden" name="tournamentId" value="<%= t._id %>">
                                                            <button type="submit" class="btn btn-sm btn-success">Bắt Đầu</button>
                                                        </form>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Edit Modal -->
                                        <div class="modal fade" id="editModal<%= t._id %>" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Sửa Giải Đấu</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <form action="/admin/football/tournament/update" method="POST" enctype="multipart/form-data">
                                                        <div class="modal-body">
                                                            <input type="hidden" name="id" value="<%= t._id %>">
                                                            <div class="mb-3">
                                                                <label class="form-label">Tên Giải</label>
                                                                <input type="text" class="form-control" name="name" value="<%= t.name %>" required>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Ban Tổ Chức</label>
                                                                <input type="text" class="form-control" name="organizer" value="<%= t.organizer %>" required>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Hình thức thi đấu</label>
                                                                <select class="form-select" name="mode">
                                                                    <option value="Group Stage" <%= t.mode === 'Group Stage' ? 'selected' : '' %>>Chia bảng đấu (Group Stage)</option>
                                                                    <option value="Knockout" <%= t.mode === 'Knockout' ? 'selected' : '' %>>Loại trực tiếp (Knockout)</option>
                                                                </select>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6 mb-3">
                                                                    <label class="form-label">Loại sân</label>
                                                                    <select class="form-select" name="pitchType">
                                                                        <option value="5" <%= t.pitchType === '5' ? 'selected' : '' %>>Sân 5 người</option>
                                                                        <option value="7" <%= t.pitchType === '7' ? 'selected' : '' %>>Sân 7 người</option>
                                                                    </select>
                                                                </div>
                                                                <div class="col-md-6 mb-3">
                                                                    <label class="form-label">Số lượng đội</label>
                                                                    <select class="form-select" name="teamsCount">
                                                                        <option value="4" <%= t.teamsCount === 4 ? 'selected' : '' %>>4 Đội</option>
                                                                        <option value="8" <%= t.teamsCount === 8 ? 'selected' : '' %>>8 Đội</option>
                                                                        <option value="16" <%= t.teamsCount === 16 ? 'selected' : '' %>>16 Đội</option>
                                                                        <option value="32" <%= t.teamsCount === 32 ? 'selected' : '' %>>32 Đội</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Trạng Thái</label>
                                                                <select class="form-select" name="status">
                                                                    <option value="upcoming" <%= t.status === 'upcoming' ? 'selected' : '' %>>Sắp diễn ra</option>
                                                                    <option value="ongoing" <%= t.status === 'ongoing' ? 'selected' : '' %>>Đang diễn ra</option>
                                                                    <option value="completed" <%= t.status === 'completed' ? 'selected' : '' %>>Đã kết thúc</option>
                                                                </select>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Hình Ảnh</label>
                                                                <input type="file" class="form-control" name="image">
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                            <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center">Chưa có giải đấu nào</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Table End -->

            <!-- Create Modal -->
            <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Tạo Giải Đấu Mới</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form action="/admin/football/tournament/create" method="POST" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Tên Giải</label>
                                    <input type="text" class="form-control" name="name" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Ban Tổ Chức</label>
                                    <input type="text" class="form-control" name="organizer" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Hình thức thi đấu</label>
                                    <select class="form-select" name="mode">
                                        <option value="Group Stage">Chia bảng đấu (Group Stage)</option>
                                        <option value="Knockout">Loại trực tiếp (Knockout)</option>
                                    </select>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Loại sân</label>
                                        <select class="form-select" name="pitchType">
                                            <option value="5">Sân 5 người (Futsal)</option>
                                            <option value="7" selected>Sân 7 người</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Số lượng đội</label>
                                        <select class="form-select" name="teamsCount">
                                            <option value="4">4 Đội</option>
                                            <option value="8">8 Đội</option>
                                            <option value="16">16 Đội</option>
                                            <option value="32">32 Đội</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Mô Tả</label>
                                    <textarea class="form-control" name="description"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Hình Ảnh</label>
                                    <input type="file" class="form-control" name="image">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                <button type="submit" class="btn btn-primary">Tạo Giải Đấu</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Footer Start -->
            <%- include('../partical/footercomponent'); %>
            <!-- Footer End -->
        </div>
        <!-- Content End -->

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/admin/lib/chart/chart.min.js"></script>
    <script src="/static/admin/lib/easing/easing.min.js"></script>
    <script src="/static/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="/static/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/static/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/static/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/static/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/static/admin/js/main.js"></script>
    <script>
        $(document).ready(function() {
            function updateTeamsCount(container) {
                const mode = $(container).find('select[name="mode"]').val();
                const teamsSelect = $(container).find('select[name="teamsCount"]');
                
                // Reset all options first
                teamsSelect.find('option').prop('disabled', false).show();

                if (mode === 'Knockout') {
                    // Knockout allows 4, 8 only
                    teamsSelect.find('option[value="16"]').prop('disabled', true).hide();
                    teamsSelect.find('option[value="32"]').prop('disabled', true).hide();
                    
                    // If current selection is invalid, switch to 8
                    const currentVal = teamsSelect.val();
                    if (currentVal == 16 || currentVal == 32) {
                        teamsSelect.val('8');
                    }
                } else {
                    // Group Stage allows 16, 32 only
                    teamsSelect.find('option[value="4"]').prop('disabled', true).hide();
                    teamsSelect.find('option[value="8"]').prop('disabled', true).hide();
                    
                    // If current selection is invalid, switch to 16
                    const currentVal = teamsSelect.val();
                    if (currentVal == 4 || currentVal == 8) {
                        teamsSelect.val('16');
                    }
                }
            }

            // Event listener for Mode change
            $(document).on('change', 'select[name="mode"]', function() {
                const container = $(this).closest('.modal-body');
                updateTeamsCount(container);
            });

            // Initialize for Create Modal on load
            updateTeamsCount($('#createModal .modal-body'));

            // Initialize for Edit Modals when they are shown
            $('.modal').on('show.bs.modal', function () {
                const container = $(this).find('.modal-body');
                if (container.length > 0) {
                    updateTeamsCount(container);
                }
            });
        });
    </script>
</body>

</html>