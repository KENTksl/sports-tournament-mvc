<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partical/headercomponent'); %>
</head>

<body>
    <div class="container-fluid position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->

        <!-- Sidebar Start -->
        <%- include('../partical/menucomponent'); %>
        <!-- Sidebar End -->

        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <%- include('../partical/navbarcomponent'); %>
            <!-- Navbar End -->

            <!-- Team Registration List Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h6 class="mb-0">Danh Sách Hồ Sơ Đội Tuyển</h6>
                                <div class="d-flex gap-2">
                                    <form class="d-flex gap-2" method="GET" action="/admin/team-registration">
                                        <input type="hidden" name="status" value="<%= filterStatus %>">
                                        <select class="form-select form-select-sm" name="tournamentId" onchange="this.form.submit()" style="width: 200px;">
                                            <option value="all">Tất cả giải đấu</option>
                                            <% if (typeof tournaments !== 'undefined') { %>
                                                <% tournaments.forEach(t => { %>
                                                    <option value="<%= t._id %>" <%= filterTournamentId == t._id ? 'selected' : '' %>><%= t.name %></option>
                                                <% }) %>
                                            <% } %>
                                        </select>
                                    </form>
                                    <a href="/admin/team-registration/create-fake?tournamentId=<%= filterTournamentId %>" class="btn btn-sm btn-info text-white"><i class="fa fa-plus me-1"></i>Tạo data mẫu</a>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="btn-group" role="group">
                                    <a href="/admin/team-registration?status=all&tournamentId=<%= filterTournamentId %>" class="btn btn-sm btn-outline-primary <%= filterStatus === 'all' ? 'active' : '' %>">Tất cả</a>
                                    <a href="/admin/team-registration?status=pending&tournamentId=<%= filterTournamentId %>" class="btn btn-sm btn-outline-warning <%= filterStatus === 'pending' ? 'active' : '' %>">Chờ duyệt</a>
                                    <a href="/admin/team-registration?status=approved&tournamentId=<%= filterTournamentId %>" class="btn btn-sm btn-outline-success <%= filterStatus === 'approved' ? 'active' : '' %>">Đã duyệt</a>
                                    <a href="/admin/team-registration?status=rejected&tournamentId=<%= filterTournamentId %>" class="btn btn-sm btn-outline-danger <%= filterStatus === 'rejected' ? 'active' : '' %>">Từ chối</a>
                                </div>
                            </div>
                            
                            <div class="table-responsive">
                                <table class="table text-start align-middle table-bordered table-hover mb-0">
                                    <thead>
                                        <tr class="text-dark">
                                            <th scope="col">Ngày nộp</th>
                                            <th scope="col">Tên Đội</th>
                                            <th scope="col">Người đại diện</th>
                                            <th scope="col">Số điện thoại</th>
                                            <th scope="col">Số thành viên</th>
                                            <th scope="col">Trạng thái</th>
                                            <th scope="col">Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(registrations && registrations.length > 0) { %>
                                            <% registrations.forEach(function(item) { %>
                                                <tr>
                                                    <td><%= new Date(item.submittedAt).toLocaleDateString('vi-VN') %></td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <img src="/static/images/<%= item.logo %>" alt="" style="width: 30px; height: 30px; object-fit: cover;" class="rounded-circle me-2">
                                                            <%= item.teamName %>
                                                        </div>
                                                    </td>
                                                    <td><%= item.representative %></td>
                                                    <td><%= item.phone %></td>
                                                    <td><%= item.members.length %></td>
                                                    <td>
                                                        <% if(item.status === 'pending') { %>
                                                            <span class="badge bg-warning text-dark">Chờ duyệt</span>
                                                        <% } else if(item.status === 'approved') { %>
                                                            <span class="badge bg-success">Đã duyệt</span>
                                                        <% } else { %>
                                                            <span class="badge bg-danger">Từ chối</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-sm btn-primary" href="/admin/team-registration/<%= item._id %>">Xem chi tiết</a>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="7" class="text-center">Chưa có hồ sơ nào</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                            
                            <div class="mt-3">
                                <!-- Removed tip -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Team Registration List End -->

            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="#">SPORT TOURNAMENT</a>, All Right Reserved. 
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            Designed By <a href="https://htmlcodex.com">HTML Codex</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/admin/lib/chart/chart.min.js"></script>
    <script src="/static/admin/lib/easing/easing.min.js"></script>
    <script src="/static/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="/static/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/static/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/static/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/static/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/static/admin/js/main.js"></script>
    <%- include('../partical/footercomponent'); %>
</body>

</html>