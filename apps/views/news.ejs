<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partical/headercomponent'); %>
</head>

<body>
    <!-- Navbar Start -->
    <%- include('partical/menucomponent'); %>
    <!-- Navbar End -->


    <!-- Page Header Start -->
    <div class="page-header container-fluid bg-primary d-flex flex-column align-items-center justify-content-center">
        <h1 class="display-3 text-uppercase mb-3">News</h1>
        <div class="d-inline-flex text-white">
            <h6 class="text-uppercase m-0"><a class="text-white" href="">Home</a></h6>
            <h6 class="m-0 px-3">/</h6>
            <h6 class="text-uppercase m-0">NEWS</h6>
        </div>
    </div>
    <!-- Page Header Start -->


    <!-- News Plan Start -->
    <div class="container-fluid py-5">
        <div class="container pt-5 pb-3">
            <h1 class="display-4 text-uppercase text-center mb-5">Tin Tức Thể Thao Thế Giới</h1>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger text-center"><%= error %></div>
            <% } %>

            <div class="row">
                <% if (typeof items !== 'undefined' && items.length > 0) { %>
                    <% items.forEach(function(item) { %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <!-- Helper logic for image -->
                                <% 
                                    var imageUrl = 'static/img/header.jpg'; // Default placeholder
                                    if (item.enclosure && item.enclosure.url) {
                                        imageUrl = item.enclosure.url;
                                    } else if (item.content && item.content.match(/src="([^"]*)"/)) {
                                        imageUrl = item.content.match(/src="([^"]*)"/)[1];
                                    }
                                %>
                                <div style="height: 200px; overflow: hidden;">
                                     <img class="card-img-top w-100 h-100" style="object-fit: cover;" src="<%= imageUrl %>" alt="<%= item.title %>" onerror="this.src='static/img/header.jpg'">
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between mb-3">
                                        <small class="m-0 text-muted"><i class="fa fa-calendar-alt mr-2"></i><%= new Date(item.pubDate).toLocaleDateString('vi-VN') %></small>
                                        <small class="m-0 text-muted"><i class="fa fa-newspaper mr-2"></i>CBS Sports</small>
                                    </div>
                                    <h5 class="card-title font-weight-bold" style="min-height: 50px;">
                                        <a href="<%= item.link %>" target="_blank" class="text-dark text-decoration-none" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;"><%= item.title %></a>
                                    </h5>
                                    <p class="card-text text-muted flex-grow-1" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">
                                        <%= item.contentSnippet ? item.contentSnippet : (item.content ? item.content.replace(/<[^>]*>/g, '').substring(0, 100) + '...' : '') %>
                                    </p>
                                    <a href="<%= item.link %>" target="_blank" class="btn btn-outline-primary btn-sm mt-3 align-self-start">Đọc Tiếp</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else if (!error) { %>
                    <div class="col-12 text-center">
                        <p>Đang cập nhật tin tức...</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <!-- News Plan End -->


    <!-- Footer Start -->
    <%- include('partical/footercomponent'); %>
    <!-- Footer End -->


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="fa fa-angle-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/isotope/isotope.pkgd.min.js"></script>
    <script src="lib/lightbox/js/lightbox.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>