<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partical/headercomponent'); %>
</head>

<body>
    <!-- Navbar Start -->
    <%- include('partical/menucomponent'); %>
    <!-- Navbar End -->

    <!-- Header Start -->
    <div class="page-header container-fluid bg-primary d-flex flex-column align-items-center justify-content-center">
        <h1 class="display-3 text-uppercase mb-3">Giải Đấu Bóng Đá</h1>
        <div class="d-inline-flex text-white">
            <h6 class="text-uppercase m-0"><a class="text-white" href="">Home</a></h6>
            <h6 class="m-0 px-3">/</h6>
            <h6 class="text-uppercase m-0">Football</h6>
        </div>
    </div>
    <!-- Header End -->

    <!-- Tournaments Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <h1 class="display-4 text-uppercase text-center mb-5">
                Danh Sách Giải Đấu
            </h1>
            <div class="row">
                <% if (tournaments && tournaments.length > 0) { %>
                    <% tournaments.forEach(t => { %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="service-item rounded p-4 mb-4 h-100">
                                <div class="mb-4" style="height: 200px; overflow: hidden; border-radius: 10px;">
                                    <img src="/static/uploads/tournaments/<%= t.image %>" onerror="this.src='/static/img/service-1.jpg'" class="img-fluid w-100 h-100" style="object-fit: cover;" alt="<%= t.name %>">
                                </div>
                                <h4 class="text-uppercase mb-3"><%= t.name %></h4>
                                <p class="m-0 mb-2"><strong>BTC:</strong> <%= t.organizer %></p>
                                <p class="m-0 mb-2"><strong>Hình thức:</strong> <%= t.mode %></p>
                                <p class="m-0 mb-2"><strong>Số đội:</strong> <%= t.teamsCount %></p>
                                <div class="mt-3 d-flex justify-content-between align-items-center">
                                    <span class="badge bg-<%= t.status === 'ongoing' ? 'success' : (t.status === 'upcoming' ? 'warning' : 'secondary') %> text-white p-2">
                                        <%= t.status === 'ongoing' ? 'Đang diễn ra' : (t.status === 'upcoming' ? 'Sắp diễn ra' : 'Đã kết thúc') %>
                                    </span>
                                    <a href="/football/detail/<%= t._id %>" class="btn btn-primary btn-sm">Xem chi tiết &rarr;</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <p>Hiện chưa có giải đấu nào.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <!-- Tournaments End -->

    <!-- Footer Start -->
    <%- include('partical/footercomponent'); %>
    <!-- Footer End -->

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="static/lib/easing/easing.min.js"></script>
    <script src="static/lib/waypoints/waypoints.min.js"></script>
    <script src="static/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="static/lib/tempusdominus/js/moment.min.js"></script>
    <script src="static/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="static/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="static/js/main.js"></script>
</body>

</html>
